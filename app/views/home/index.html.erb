<h1 class="title is-1">Magic the Gathering</h1>
<div class="columns">
  <div class="column">
    <h2 class="title is-2">MTG Cards</h2>
    <ul class="ml-5">
      <% @cards.each do | card | %>
        <li>
            <%= link_to card.name, card %>
            <em> (<%= card.magic_set.name %>)</em>
        </li>
      <% end %>
    </ul>
    <p>
      <%= link_to "Check out the rest of the cards!", cards_path %>
    </p>
  </div>

  <div class="column">
    <h2 class="title is-2">MTG Sets</h2>
    <ul class="ml-5">
      <% @sets.each do | set | %>
        <li>
            <%= link_to set.name, set %>
            <em> (<%= set.cards.count %>)</em>

        </li>
      <% end %>
    </ul>
    <p>
      <%= link_to "Explore the rest of the sets here!", magic_sets_path %>
    </p>
  </div>

  <div class="column">
    <h2 class="title is-2">Card Artists</h2>
    <ul class="ml-5">
      <% @artists.each do | artist | %>
        <li>
            <%= link_to artist.name, artist %>
            <em> (<%= pluralize artist.cards.count, 'card' %> designed)</em>
        </li>
      <% end %>
    </ul>
    <p>
      <%= link_to "See all the artists here!", artists_path %>
    </p>
  </div>
</div>
