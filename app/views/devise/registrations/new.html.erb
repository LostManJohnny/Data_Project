<h2 class="title is-2 is-centered">Sign up</h2>

<div class="columns is-centered">
  <div class="column is-half">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "form" ) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :username, class: "label"  %><br />
        <%= f.text_field :username, autocomplete: "username", class: "input" %>
      </div>

      <div class="field">
        <%= f.label :email, class: "label" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input" %>
      </div>

      <div class="field">
        <%= f.label :province, class: "label"  %><br />
        <div class="select is-link" >
          <%= f.select :province_id, options_for_select(Province.all.map{|p| [p.name, p.id]})%>
        </div>
      </div>

      <div class="field">
        <%= f.label :password, class: "label"  %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "input"%>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, class: "label"  %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input" %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up", class: "button is-primary"%>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>